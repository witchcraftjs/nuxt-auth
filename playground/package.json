{
	"private": true,
	"name": "@witchcraft/nuxt-auth-playground",
	"type": "module",
	"scripts": {
		"dev": "nuxi dev",
		"dev:nix": "devenv up",
		"build": "cross-env-shell DISABLE_POSTGRES_ENSURE_ENV=true 'nuxi build'",
		"db:regenerate": "rm -rf .devenv/state/postgres && rm -rf db/migrations && drizzle-kit generate",
		"generate": "nuxi generate",
		"update-dep": "cd ../ && pnpm build:only && cd playground && pnpm update @witchcraft/nuxt-auth && pnpm update @witchcraft/nuxt-postgres"
	},
	"@comments": {
		"dependencies": {
			"tsx": "This is because of https://github.com/drizzle-team/drizzle-orm/issues/2705",
			"@witchcraft/*(except self)": "TODO remove and properly install before publishing."
		}
	},
	"dependencies": {
		"@witchcraft/nuxt-auth": "file:../",
		"@witchcraft/nuxt-postgres": "^0.0.1",
		"@witchcraft/nuxt-utils": "^0.2.1",
		"@witchcraft/ui": "^0.2.1",
		"arctic": "^1.9.2",
		"cookie-es": "^1.2.2",
		"drizzle-orm": "^0.44.3",
		"nuxt": "^4.0.3",
		"unplugin-icons": "^22.1.0",
		"unplugin-vue-components": "^0.27.4",
		"zod": "^4.0.0"
	},
	"devDependencies": {
		"tsx": "^4.20.3"
	}
}
