{
	"private": true,
	"name": "@witchcraft/nuxt-auth-playground",
	"type": "module",
	"scripts": {
		"dev": "nuxi dev",
		"dev:nix": "devenv up",
		"build": "cross-env-shell DISABLE_POSTGRES_ENSURE_ENV=true 'nuxi build'",
		"db:regenerate": "rm -rf .devenv/state/postgres && rm -rf db/migrations && drizzle-kit generate",
		"generate": "nuxi generate",
		"update-dep": "cd ../ && pnpm build:only && cd playground && pnpm update @witchcraft/nuxt-auth"
	},
	"@comments": {
		"dependencies": {
			"tsx": "This is because of https://github.com/drizzle-team/drizzle-orm/issues/2705"
		}
	},
	"dependencies": {
		"@witchcraft/nuxt-auth": "file:..",
		"@witchcraft/nuxt-logger": "^0.0.2",
		"@witchcraft/nuxt-postgres": "^0.1.3",
		"@witchcraft/nuxt-utils": "^0.3.2",
		"@witchcraft/ui": "^0.3.2",
		"arctic": "^3.7.0",
		"cookie-es": "^2.0.0",
		"drizzle-orm": "^0.44.5",
		"nuxt": "^4.1.2",
		"unplugin-icons": "^22.3.0",
		"unplugin-vue-components": "^29.0.0",
		"zod": "^4.1.9"
	},
	"pnpm": {
		"overrides": {
			"@witchcraft/ui": "^0.3.2"
		}
	},
	"devDependencies": {
		"drizzle-kit": "^0.31.4",
		"tsx": "^4.20.5"
	}
}
