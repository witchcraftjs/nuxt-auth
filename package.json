{
	"name": "@witchcraft/nuxt-auth",
	"version": "0.1.7",
	"description": "Nuxt module for logging.",
	"repository": "witchcraftjs/nuxt-auth",
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"//exports": {
		"require in ./*": "Temporary for drizzle."
	},
	"exports": {
		".": {
			"types": "./dist/types.d.mts",
			"import": "./dist/module.mjs"
		},
		"./*": {
			"types": "./dist/runtime/*.d.ts",
			"import": "./dist/runtime/*.js",
			"require": "./dist/runtime/*.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"prepare": "husky && pnpm nuxt-module-build prepare && pnpm build:only && cd playground && pnpm i --ignore-scripts --ignore-workspace",
		"build": "cross-env-shell DISABLE_POSTGRES_ENSURE_ENV=true 'nuxt-module-build prepare && nuxt-module-build build && pnpm nuxi build playground'",
		"build:only": "nuxt-module-build build",
		"//": "drizzle requires we run from playground",
		"dev:playground": "cd playground && pnpm dev",
		"dev:prepare": "cross-env-shell DISABLE_POSTGRES_ENSURE_ENV=true 'pnpm nuxt-module-build build --stub && pnpm nuxt-module-build prepare && pnpm nuxi prepare playground'",
		"lint": "eslint \"{src,test,playground/app}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\"",
		"lint:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
		"test": "echo no tests and not working yet vitest run --exclude .direnv",
		"test:watch": "vitest watch --exclude .direnv"
	},
	"peerDependencies": {
		"drizzle-orm": "^0.44.3"
	},
	"@comments": {
		"dependencies": {
			"@witchcraft/nuxt-logger": "This is only for some types for the logger, but is otherwise unused."
		}
	},
	"dependencies": {
		"@alanscodelog/tsconfigs": "^6.2.0",
		"@alanscodelog/utils": "^6.0.1",
		"@iconify/json": "^2.2.384",
		"@nuxt/kit": "^4.1.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@vueuse/core": "^13.9.0",
		"@witchcraft/nuxt-logger": "^0.0.2",
		"@witchcraft/ui": "^0.3.2",
		"arctic": "~3.7.0",
		"cookie-es": "^2.0.0",
		"defu": "latest",
		"jsonwebtoken": "^9.0.2",
		"ms": "^2.1.3",
		"nuxt-security": "^2.4.0",
		"unplugin-icons": "^22.3.0",
		"unplugin-vue-components": "^29.0.0",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "^6.3.1",
		"@alanscodelog/semantic-release-config": "^5.0.4",
		"@nuxt/eslint-config": "^1.9.0",
		"@nuxt/module-builder": "^1.0.2",
		"@nuxt/schema": "^4.1.2",
		"@nuxt/test-utils": "^3.19.2",
		"@tailwindcss/cli": "^4.1.13",
		"@types/node": "latest",
		"changelogen": "^0.6.2",
		"cross-env": "^10.0.0",
		"drizzle-orm": "^0.44.5",
		"electron": "^38.1.0",
		"eslint": "^9.35.0",
		"husky": "^9.1.7",
		"nuxt": "^4.1.2",
		"reka-ui": "^2.5.0",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.0.7"
	},
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"publishConfig": {
		"access": "public"
	}
}
